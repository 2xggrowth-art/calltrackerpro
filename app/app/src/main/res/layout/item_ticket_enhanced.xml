<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_ticket"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="3dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Priority Stripe -->
        <View
            android:id="@+id/priorityIndicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/priority_high" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Row 1: Avatar + Contact Name + Status/Priority chips -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Contact Avatar -->
                <TextView
                    android:id="@+id/tvContactAvatar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circle_active"
                    android:gravity="center"
                    android:text="J"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Contact Name -->
                <TextView
                    android:id="@+id/tvContactName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="John Doe"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="?attr/colorOnSurface"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="John Doe" />

                <!-- Status Chip -->
                <TextView
                    android:id="@+id/tvTicketStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:background="@drawable/chip_background"
                    android:textColor="@android:color/white"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:layout_marginStart="6dp"
                    tools:text="Open" />

                <!-- Priority Chip -->
                <TextView
                    android:id="@+id/tvPriority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:background="@drawable/chip_background_outline"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:layout_marginStart="4dp"
                    tools:text="High" />

            </LinearLayout>

            <!-- Row 2: Ticket number + Phone + Company + Deal value -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="42dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvContactInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="#TKT-001 . +1 234 567 . Acme Corp"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="#TKT-001 . +1 234 567 . Acme Corp" />

                <!-- Deal Value -->
                <TextView
                    android:id="@+id/tvDealValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="$5,000"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/success_green"
                    android:visibility="gone"
                    tools:text="$5,000"
                    tools:visibility="visible" />

            </LinearLayout>

            <!-- Row 3: Assignment + Due date + Menu button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="42dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvAssignedTo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Assigned: John Smith"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Assigned: John Smith" />

                <TextView
                    android:id="@+id/tvDueDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Due: Today"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="Due: Today" />

                <!-- Action Menu (48dp touch target) -->
                <ImageView
                    android:id="@+id/btnTicketMenu"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_more"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    android:layout_marginEnd="-12dp"
                    android:contentDescription="Ticket menu" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
